<h1 style="text-align:center">Sign In</h1>
<div class="col-xs-8 col-xs-offset-2 col-md-6 col-md-offset-3">
<%= form_tag sessions_path do%>
  <div class="form-group" style="text-align:center">
    <%= label_tag :email %>
    <%= email_field_tag :email, "", class: "form-control", style: "text-align:center" %>
  </div>
  <div class="form-group" style="text-align:center">
    <%= label_tag :password %>
    <%= password_field_tag :password, "", class: "form-control", style: "text-align:center" %>
  </div>
  <div style="text-align:center">
  <%= submit_tag 'Sign In', class: "btn btn-default btn-secondary" %>
  </div>
<% end %>
</div>
