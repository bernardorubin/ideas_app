<div class="container">
  <div class="row">
    <div class="container">
      <div class="col-xs-9 col-sm-10 col-md-11"> <i class="fa fa-lightbulb-o fa-5x lightbulb" aria-hidden="true"></i> </div>
      <div class="col-xs-3 col-sm-2 col-md-1"> <%= link_to 'New Idea', new_idea_path, class: "btn btn-default lighttrigger", style: "margin-top:20px" %></div>
    </div>
  </div>
  <div class="container">
  <% @ideas.each do |i| %>
    <div class="row">
      <hr>
      <div class="row">
        <div class="col-xs-12">
          <h4 class="title"> <strong><%= i.title %></strong> </h4>
          <div class="description">
            <p> <%= link_to i.description, idea_path(i) %> </p>
            <% if can?(:manage, i) %>
            <%= link_to 'Edit', edit_idea_path(i) %>
            <%= link_to 'Delete', idea_path(i), method: :delete,
            data: { confirm: 'Are you sure?' } %>
            <% end  %>
          <img src="http://unsplash.it/g/1300/30/?blur" alt="" class="img-responsive preview">
          </div>
        </div>
      </div>
      <div class="row">
      <div class="col-xs-3"><% @username = User.find i.user_id %>By <%= @username.first_name %></div>
      <div class="col-xs-5"> <span class="btn btn-default flat">Joined</span> | <%= link_to '', idea_likes_path(i), class: "btn btn-default flat fa fa-thumbs-up", method: :post %> </div>
      <div class="col-xs-4" style="text-align:right">Members: 5 | Likes: <%= i.likes %></div>
      </div>
    </div>
  <% end  %>
  <hr>
</div>
</div>
